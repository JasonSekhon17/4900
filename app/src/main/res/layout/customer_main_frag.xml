<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/serviceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please choose the service you want to request"/>
        <RadioGroup
            android:id="@+id/radioService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioWashaf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wash and Fold"
                android:checked="true" />
        </RadioGroup>
        <TextView
            android:id="@+id/numberTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please click to choose number of bags"/>
        <Spinner
            android:id="@+id/bag_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:popupBackground="#ccc">

        </Spinner>
        <Button
            android:id="@+id/order_button"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to request for service"/>
        <TextView
            android:id="@+id/orderBagTag"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please click to choose number of bags"/>
        <Spinner
            android:id="@+id/request_bag_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:popupBackground="#ccc"/>
        <Button
            android:id="@+id/order_bag_button"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to request for bags"/>

    </LinearLayout>
</ScrollView>
